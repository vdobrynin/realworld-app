{
  "name": "realworld-app",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --prod --base-href ./ && cp CNAME dist/CNAME",
    "test": "ng test",
    "lint": "ng lint --force",
    "e2e": "ng e2e",
    "cypress:run": "npx cypress run",
    "delete:reports": "rm -rf cypress/results/* dockerReports/* mochawesome-report/mochawesome.html || true",
    "prereport": "npm run delete:reports",
    "mochawesome:merge": "npx mochawesome-merge \"cypress/results/mochawesome/*.json\" > mochawesome.json && npx marge mochawesome.json",
    "junit:merge": "npx junit-merge -d cypress/results/junit -o cypress/results/junit/result.xml",
    "cypress:run2": "npm run prereport && npx cypress run",
    "cypress:e2e": "start-test start http-get://localhost:4200 cypress:run; npm run junit:merge; npm run mochawesome:merge",
    "cy:open_dev": "npx cypress open --env username=pwtest63@test.com,password=vd123456",
    "cy:open_qa": "npx cypress open --env username=pwtest64@test.com,password=vd1234567",
    "cy:open_process": "npx cypress open --env username=$DB_USERNAME,password=$PASSWORD",
    "prepare": "husky install"
  },
  "pre-commit": [
    "lint"
  ],
  "engines": {
    "node": "^18.13.0 || ^20.9.0"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "17.0.7",
    "@angular/common": "17.0.7",
    "@angular/compiler": "17.0.7",
    "@angular/core": "17.0.7",
    "@angular/forms": "17.0.7",
    "@angular/platform-browser": "17.0.7",
    "@angular/platform-browser-dynamic": "17.0.7",
    "@angular/router": "17.0.7",
    "@rx-angular/cdk": "17.0.0",
    "@rx-angular/template": "17.0.0",
    "marked": "^11.2.0",
    "npm-check": "^6.0.1",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "^0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.13",
    "@angular/cli": "^17.3.13",
    "@angular/compiler-cli": "17.0.7",
    "@cypress/schematic": "^2.5.2",
    "@types/jasmine": "~4.3.0",
    "@types/marked": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "browserslist": "^4.24.4",
    "cypress": "^14.3.3",
    "cypress-multi-reporters": "^1.6.4",
    "husky": "^8.0.3",
    "jasmine-core": "~4.5.0",
    "junit-merge": "^2.0.0",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^15.5.0",
    "mocha": "^10.8.2",
    "mocha-junit-reporter": "^2.2.1",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.2.0",
    "prettier": "^3.5.3",
    "start-server-and-test": "^2.0.11",
    "typescript": "~5.2.2"
  },
  "lint-staged": {
    "*.{ts,html,css,json,md}": "prettier --write"
  }
}
